<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_centerVertical="true"
            android:id="@+id/order_detail_img"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="57dp"
            android:layout_height="57dp"
            fresco:failureImage="@drawable/default_bg"
            fresco:placeholderImage="@drawable/default_bg"/>
        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/order_detail_img"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="19dp"
                android:id="@+id/clothes_name"
                android:layout_weight="1"
                android:text="西装上衣"
                android:textColor="@color/black_text"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/laundry_num"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="数量:x1"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/laundry_price"
                android:layout_marginTop="19dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="￥15.5"
                android:textColor="@color/black_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/technology_price_markup"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:text="工艺加价 ：￥10.0"
                android:textColor="@color/black_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/maintain_value_clean_detail"
            android:layout_centerVertical="true"
            android:text="保值清洗费：￥0.00"
            android:textColor="@color/black_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/maintain_value_money_detail"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="保值金额：￥0"
            android:textColor="@color/black_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/order_detail_gv"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:columnWidth="78dp"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:id="@+id/ll_order_detail_info"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_detail_remark"
            android:textColor="@color/black_text"
            android:layout_gravity="center_vertical"
            android:text="加价备注："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_detail_remark_info"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="墨水，油渍，掉色墨水，掉色掉色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_order_detail_colour"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_detail_colour"
            android:textColor="@color/black_text"
            android:layout_gravity="center_vertical"
            android:text="颜色："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="22dp"
            android:id="@+id/order_detail_colour_info"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="黑色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_question_detail"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_detail"
            android:textColor="@color/black_text"
            android:layout_gravity="center_vertical"
            android:text="问题描述："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question_detail_info"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="墨水，油渍，掉色墨水，掉色掉色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layerType="software"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>