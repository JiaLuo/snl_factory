<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/collect_clothes_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="285dp"
            android:layout_height="155dp">
            <LinearLayout
                android:background="@drawable/input_num_bg"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <EditText
                    android:id="@+id/ed_phone_order_num"
                    android:textSize="14sp"
                    android:hint="请输入特殊折扣金额"
                    android:maxLength="12"
                    android:lines="1"
                    android:inputType="phone"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/revise_phone_cancel"
                android:gravity="center"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:text="取消"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="#cccccc"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/revise_phone_confirm"
                android:textColor="#09b1b0"
                android:textSize="16sp"
                android:gravity="center"
                android:text="确定"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>