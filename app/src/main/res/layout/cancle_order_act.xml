<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/root_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_marginLeft="12dp"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="选择取消订单原因"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ListView
        android:dividerHeight="1px"
        android:id="@+id/cancel_order_list"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/comminute_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:id="@+id/another_reason"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_marginLeft="12dp"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="其他原因"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/another_reason_select"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cancel_order_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/another_reason_detail"
        android:layout_marginTop="23dp"
        android:layout_gravity="center"
        android:background="@drawable/feedback_edit_bg"
        android:layout_width="337dp"
        android:layout_height="94dp">
        <EditText
            android:id="@+id/cancel_order_content"
            android:maxLength="100"
            android:cursorVisible="false"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:gravity="left"
            android:textColorHint="#cccccc"
            android:hint="请输入其他原因"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/cancel_edit_max_num"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/cancel_order_bt"
        android:layout_marginTop="43dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="取消订单"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>