<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_login_title"
        android:background="@color/base_color"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:text="登录"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/rl_login_title"
        android:id="@+id/login_bg"
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_phone_num"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_bg"
        android:layout_width="301dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="33dp"
            android:text="电话"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/login_put_num"
            android:layout_marginTop="33dp"
            android:textSize="14sp"
            android:maxLength="11"
            android:lines="1"
            android:inputType="phone"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_marginLeft="47dp"
            android:textColorHint="#e0e0e0"
            android:hint="请输入您的手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#cccccc"
            android:layout_marginTop="17dp"
            android:layout_below="@id/login_put_num"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_password_num"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_phone_num"
        android:layout_width="301dp"
        android:layout_height="54dp">
        <TextView
            android:layout_marginTop="17dp"
            android:text="密码"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/login_put_password"
            android:textSize="14sp"
            android:layout_marginTop="17dp"
            android:maxLength="18"
            android:lines="1"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_marginLeft="47dp"
            android:textColorHint="#e0e0e0"
            android:hint="请输入您的密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#cccccc"
            android:layout_marginTop="17dp"
            android:layout_below="@id/login_put_password"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/login_bt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rl_password_num"
        android:layout_marginTop="30dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="登录"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/forget_password"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/login_bt"
        android:layout_alignParentRight="true"
        android:textColor="@color/base_color"
        android:text="忘记密码？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="点击登录，即表示您同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/person_protocol"
            android:textColor="@color/base_color"
            android:text="用户协议"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>