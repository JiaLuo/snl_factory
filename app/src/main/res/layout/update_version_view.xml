<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="285dp"
              android:layout_height="wrap_content">
    <TextView
        android:text="Software update"
        android:layout_gravity="center_horizontal"
        android:textColor="#dbdbdb"
        android:textSize="12sp"
        android:layout_marginTop="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_gravity="center_horizontal"
        android:background="#ececec"
        android:layout_width="117dp"
        android:layout_height="1dp"/>
    <TextView
        android:text="软件更新"
        android:textSize="20sp"
        android:textColor="@color/black_text"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/update_version_num"
        android:text="最新版本：1.2.20"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black_text"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/update_version_size"
        android:text="版本大小：20.35M"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black_text"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/update_version_content"
        android:text="【更细内容】：动静反馈到垃圾分类撒娇了肯定思路加富里会计师的拉开到进付款拉加德浪费空间上会计分录扩散到"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black_text"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/now_update"
        android:background="@drawable/book_detail_now_read_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="25dp"
        android:layout_width="212dp"
        android:layout_height="40dp">
        <TextView
            android:text="立即更新"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>