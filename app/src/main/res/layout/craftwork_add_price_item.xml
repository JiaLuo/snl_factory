<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_clothes_img"
            android:layout_centerVertical="true"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            fresco:failureImage="@drawable/default_bg"
            fresco:placeholderImage="@drawable/default_bg"/>
        <TextView
            android:id="@+id/tv_clothes_name"
            android:text="真丝衬衫/连衣裙"
            android:layout_toRightOf="@id/iv_clothes_img"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_clothes_price"
            android:text="￥100.00"
            android:layout_toRightOf="@id/iv_clothes_img"
            android:layout_below="@id/tv_clothes_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#f94831"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layerType="software"
        android:background="@drawable/order_detail_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/clothes_number"
        android:textColor="#666666"
        android:text="衣物编码：*****"
        android:layout_marginTop="13dp"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_technology_price"
        android:text="特殊工艺加价：￥0.00"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/editor_maintain_value"
            android:text="保值金额：￥0.00"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/maintain_value_clean_num"
            android:layout_toRightOf="@id/editor_maintain_value"
            android:layout_marginLeft="14dp"
            android:text="保值清洗费：￥0.00"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_take_clothes_time"
        android:text="10月26日  [周二]  15:00-19:00"
        android:drawableLeft="@drawable/editor_price_time_img"
        android:drawablePadding="6dp"
        android:layout_marginTop="13dp"
        android:textColor="#666666"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_remarks"
        android:text="备注：暂无备注"
        android:textColor="#666666"
        android:textSize="13sp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>