<?xml version="1.0" encoding="utf-8"?>
<com.shinaier.laundry.snlfactory.view.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sml_message_item"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/ll_message_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_msg_notice"
            android:layout_marginLeft="12dp"
            android:background="@drawable/msg_notice_img"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/msg_notice_title"
                android:text="新店开业"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/msg_notice_time"
                android:text="2016.05.26"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/msg_notice_content"
                android:text="北京市朝阳区建国路万达广场"
                android:layout_below="@id/msg_notice_title"
                android:layout_marginBottom="14dp"
                android:textSize="13sp"
                android:textColor="@color/black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:textColor="@android:color/white"/>
</com.shinaier.laundry.snlfactory.view.SwipeMenuLayout>