<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/ll_leave_factory_list"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:background="@color/comminute_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/leave_factory_select"
        android:src="@drawable/add_item_selector"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/leave_factory_clothes_num"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:text="123456"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/leave_factory_clothes_name"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:text="西装上衣"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/leave_factory_clothes_put_sn"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:text="西装上衣"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/comminute_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
</LinearLayout>