<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_order_dispose"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_order_dispose_num"
            android:layout_marginLeft="13dp"
            android:background="@drawable/manage_employee_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/employee_line_num"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@id/rl_order_dispose_num"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_dispose_number"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="14dp"
                    android:text="订单号：1674563241"
                    android:textColor="@color/black_text"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:background="#c7c7c7"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_dispose_bespeak_time"
                    android:textSize="13sp"
                    android:textColor="@color/black_text"
                    android:layout_marginTop="13dp"
                    android:text="预约上门时间："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_dispose_bespeak_time_detail"
                    android:text="2016.12.10 16:30"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_dispose_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_dispose_name"
                    android:text="张家落"
                    android:layout_marginTop="13dp"
                    android:textSize="13sp"
                    android:textColor="@color/black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_dispose_phone_num"
                    android:text="13838838438"
                    android:drawableRight="@drawable/order_phone_img"
                    android:drawablePadding="8dp"
                    android:textSize="13sp"
                    android:textColor="@color/base_color"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/order_dispose_address"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:textSize="13sp"
                android:textColor="@color/black_text"
                android:text="北京市朝阳区"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#c7c7c7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_dispose_now_time"
            android:text="时间：2016.10.26 10:54"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#b2b2b2"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_dispose_cancel"
                android:textColor="@color/black_text"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="13sp"
                android:background="@drawable/cancel_order_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/order_dispose_contact_store"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/login"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>