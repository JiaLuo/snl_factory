<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.shinaier.laundry.snlfactory.view.FlowLayout
        android:id="@+id/select_question"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:focusable="false"/>

    <com.shinaier.laundry.snlfactory.view.PinnedHeaderExpandableListView
        android:layout_marginBottom="44dp"
        android:id="@+id/question_list"
        android:layout_below="@id/select_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.0dp"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:groupIndicator="@null"
        android:scrollbars="vertical"
        android:scrollingCache="true" />
    <TextView

        android:id="@+id/question_confirm"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@color/base_color"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</RelativeLayout>