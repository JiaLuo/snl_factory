<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/card_coupons_detail_tile"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/check_clothes_img_lin_bg"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <TextView
            android:text="序号"
            android:textColor="@color/black_text"
            android:background="@color/thick_line"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#999"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:text="卡号"
            android:textColor="@color/black_text"
            android:background="@color/thick_line"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#999"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:text="有效日期"
            android:background="@color/thick_line"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:textSize="14sp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ListView
        android:id="@+id/cash_coupon_list"
        android:layout_below="@id/card_coupons_detail_tile"
        android:divider="#999"
        android:dividerHeight="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="46dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>
    <TextView
        android:id="@+id/copy_cash_coupon"
        android:text="复制卡号"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/base_color"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</RelativeLayout>