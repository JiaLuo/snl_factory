<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/check_clothes_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:text="西装外套"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/check_clothes_num"
            android:text="数量：x1"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <com.shinaier.laundry.snlfactory.view.WrapHeightGridView
        android:layout_marginLeft="12dp"
            android:id="@+id/check_clothes_img"
            android:numColumns="4"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_color_and_question"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/color_setting_bt"
            android:textColor="@color/black_text"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="13sp"
            android:layout_marginRight="12dp"
            android:background="@drawable/cancel_order_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question_info_bt"
            android:textColor="@color/black_text"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/cancel_order_bt"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_color_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"
            android:text="颜色："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/color_info"
            android:lines="1"
            android:layout_weight="0.8"
            android:text="黄格"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/color_edit"
            android:text="编辑"
            android:layout_marginRight="12dp"
            android:textColor="@color/base_color"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_question_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_marginLeft="12dp"
            android:text="问题描述："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question_info"
            android:lines="1"
            android:layout_weight="0.8"
            android:text="大片油渍"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question_info_edit"
            android:text="编辑"
            android:layout_marginRight="12dp"
            android:textColor="@color/base_color"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>