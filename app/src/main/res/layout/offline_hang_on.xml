<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_drawable_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.shinaier.laundry.snlfactory.view.ClearEditText
                    android:id="@+id/edit_search_hang_on"
                    android:inputType="number"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/search_result_img"
                    android:drawablePadding="10dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:digits="@string/filter_vcode"
                    android:hint="请输入衣物编码"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textColorHint="#c7c7cc"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_add_hang_on"
                android:background="@color/base_color"
                android:padding="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/iv_scan_qrcode_hang_on"
                android:background="@drawable/list_scan_img"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_empty_datas_hang_on"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_logo"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="#c7c7cc"
                android:text="暂无数据"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_data_list_hang_on"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/rl_send_laundry_head"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/base_color"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:text="衣物编码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="名称"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ListView
                android:id="@+id/hang_on_list"
                android:layout_below="@id/rl_send_laundry_head"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/white"
                android:choiceMode="singleChoice"
                android:drawSelectorOnTop="false"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="true"
                android:groupIndicator="@null"
                android:layout_marginBottom="44dp"
                android:scrollingCache="true" />
            <LinearLayout
                android:background="@color/comminute_line"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <RelativeLayout
                    android:id="@+id/rl_add_select_hang_on"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_all_select"
                        android:text="全选"
                        android:textColor="@color/black_text"
                        android:background="@color/white"
                        android:layout_centerInParent="true"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/add_item_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/left_bt_operation"
                    android:text="返流"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/base_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/white"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/right_bt_operation"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:background="@color/base_color"
                    android:text="下一步"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>