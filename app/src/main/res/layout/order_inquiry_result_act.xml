<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_drawable_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.shinaier.laundry.snlfactory.view.ClearEditText
                    android:layout_weight="0.6"
                    android:inputType="number"
                    android:background="@null"
                    android:id="@+id/edit_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/search_result_img"
                    android:drawablePadding="10dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:hint="请输入订单号"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textColorHint="#c7c7cc"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:textSize="14sp"
                android:id="@+id/btn_start_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black_text"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.common.widget.FootLoadingListView
            android:divider="#f7f7f7"
            android:dividerHeight="10dp"
            android:id="@+id/inquiry_result_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
        <include layout="@layout/load_data_status_view"/>
    </FrameLayout>
</LinearLayout>