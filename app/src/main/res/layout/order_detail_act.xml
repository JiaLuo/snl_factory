<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--<include layout="@layout/load_data_status_view"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="#f5f5f5"
                android:id="@+id/ll_item_info"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:text="项目信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.shinaier.laundry.snlfactory.view.WrapHeightListView
                android:divider="@null"
                android:id="@+id/order_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"/>
            <LinearLayout
                android:id="@+id/ll_project_info"
                android:layout_marginTop="17dp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/num_of_packages"
                    android:text="共1件"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_detail_activity"
                    android:layout_marginLeft="20dp"
                    android:text="活动优惠："
                    android:textColor="@color/black_text"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/favourable_num"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="上门服务费："
                    android:textColor="@color/black_text"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/service_charge"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_altogether"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/altogether_num"
                    android:text="总计：￥29"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/actuall_paid_num"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:text="实付：￥20.30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:background="#f5f5f5"
                    android:id="@+id/ll_order_info"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:text="订单信息"
                        android:textColor="@color/black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#999999"
                        android:text="订单号："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="107dp"
                        android:id="@+id/order_num_detail"
                        android:text="123231312312321"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#999999"
                        android:text="下单时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/place_order_time"
                        android:layout_marginLeft="107dp"
                        android:text="2016-10-22 14:22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#999999"
                        android:text="预约上门时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/bespeak_time"
                        android:layout_marginLeft="107dp"
                        android:text="2016-10-22 14:22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_order_address"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#999999"
                        android:text="订单地址："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/order_detail_address"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="107dp"
                        android:text="北京市朝阳区万达广场"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_order_remarks"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#999999"
                        android:id="@+id/order_remarks"
                        android:text="备注："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/order_detail_remarks"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="107dp"
                        android:text="请尽快上门取件"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>