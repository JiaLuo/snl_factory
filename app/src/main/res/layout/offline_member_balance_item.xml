<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/input_num_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_member_balance_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_member_balance_detail"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_member_name"
                    android:text="姓名："
                    android:layout_marginTop="12dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_member_name_info"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/tv_member_name"
                    android:layout_below="@id/tv_member_num"
                    android:textColor="#5c5c5c"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_member_phone"
                    android:text="手机号："
                    android:layout_below="@id/tv_member_name"
                    android:layout_marginTop="12dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_member_phone_info"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/tv_member_phone"
                    android:layout_below="@id/tv_member_name_info"
                    android:textColor="#5c5c5c"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:background="#e0e0e0"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_member_balance"
                    android:layout_centerInParent="true"
                    android:text="￥160.00"
                    android:textColor="@color/black_text"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_member_balance_type"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/tv_member_balance"
                    android:text="黄金会员"
                    android:textSize="13sp"
                    android:textColor="#4c4c4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_member_deal_time"
            android:layout_below="@id/ll_member_balance_content"
            android:textColor="#999999"
            android:textSize="12sp"
             android:layout_margin="12dp"
            android:text="办理时间：2016.08.09 08:45:26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="#e0e0e0"
            android:layout_above="@id/tv_member_deal_time"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
</LinearLayout>