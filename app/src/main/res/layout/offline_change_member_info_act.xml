<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/load_data_status_view"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="会员信息"
                    android:textColor="@color/black_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--<RelativeLayout-->
                <!--android:layout_margin="17dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->
                <!--<TextView-->
                    <!--android:text="卡号："-->
                    <!--android:textSize="14sp"-->
                    <!--android:textColor="#666666"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"/>-->
                <!--<TextView-->
                    <!--android:id="@+id/change_info_member_num"-->
                    <!--android:textSize="14sp"-->
                    <!--android:textColor="#666666"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"/>-->
            <!--</RelativeLayout>-->
            <RelativeLayout
                android:layout_marginTop="17dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/change_info_member_name"
                    android:layout_centerVertical="true"
                    android:text="姓名："
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/change_info_input_member_name"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/check_clothes_img_lin_bg"
                    android:layout_alignParentRight="true"
                    android:inputType="text"
                    android:lines="1"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="182dp"
                    android:layout_height="36dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_change_info_member_sex"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="性别："
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/change_info_sex_man"
                    android:layout_centerVertical="true"
                    android:text="男"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/discount_selector"
                    android:drawablePadding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/change_info_sex_women"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/change_info_sex_man"
                    android:text="女"
                    android:layout_marginRight="40dp"
                    android:drawableLeft="@drawable/discount_selector"
                    android:drawablePadding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="手机号："
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/change_info_member_mobile"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/check_clothes_img_lin_bg"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingRight="8dp"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:lines="1"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="182dp"
                    android:layout_height="36dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_change_info_member_birth"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="会员生日："
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/change_info_member_birth"
                    android:gravity="right|center_vertical"
                    android:background="@drawable/check_clothes_img_lin_bg"
                    android:paddingRight="8dp"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:hint="1980-01-01"
                    android:textColor="#666666"
                    android:layout_width="182dp"
                    android:layout_height="36dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_change_info_member_discount"
                android:visibility="gone"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="折扣："
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:background="@drawable/check_clothes_img_lin_bg"
                    android:layout_width="182dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/change_info_discount"
                        android:text="折"
                        android:textColor="@color/black_text"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/change_info_input_discount_num"
                        android:layout_toLeftOf="@id/change_info_discount"
                        android:layout_marginRight="4dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_width="182dp"
                        android:layout_height="36dp"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="地址："
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/change_info_input_member_address"
                    android:background="@drawable/check_clothes_img_lin_bg"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#666666"
                    android:layout_width="248dp"
                    android:layout_height="73dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="备注："
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/change_info_input_member_mark"
                    android:background="@drawable/check_clothes_img_lin_bg"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="#666666"
                    android:layout_width="248dp"
                    android:layout_height="73dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/change_info_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="37dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/login"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>