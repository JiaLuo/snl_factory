<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/invite_friend_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/invite_code"
                android:textColor="@color/base_color"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="235dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/invite_friend_now_up"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/invite_code"
                android:layout_marginTop="17dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="立即邀请好友"
                android:background="@drawable/login"
                android:layout_width="201dp"
                android:layout_height="46dp"/>
            <TextView
                android:layout_marginTop="26dp"
                android:id="@+id/cash_back_know"
                android:text="返现需知："
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:layout_below="@id/invite_friend_now_up"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="11dp"
                android:layout_below="@id/cash_back_know"
                android:lineSpacingExtra="12dp"
                android:id="@+id/invite_text_info"
                android:textColor="#808080"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/invite_friend_now_down"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/invite_text_info"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="50dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="立即邀请好友"
                android:background="@drawable/login"
                android:layout_width="201dp"
                android:layout_height="46dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>