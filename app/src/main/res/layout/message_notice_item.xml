<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/rl_msg_notice"
                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_msg_notice"
        android:background="@drawable/msg_notice_img"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/msg_notice_title"
        android:layout_toRightOf="@id/iv_msg_notice"
        android:text="新店开业"
        android:textSize="16sp"
        android:textColor="@color/black_text"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/msg_notice_time"
        android:text="2016.05.26"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/msg_notice_content"
        android:text="北京市朝阳区建国路万达广场"
        android:layout_below="@id/msg_notice_title"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="14sp"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>