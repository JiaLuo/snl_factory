<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#f5f5f5"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/base_color"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:text="商家管理"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_message_notice"
            android:background="@drawable/message_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/manager_top_bg"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/store_img"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    fresco:failureImage="@drawable/default_bg"
                    fresco:placeholderImage="@drawable/default_bg"/>
                <RelativeLayout
                    android:id="@+id/ll_store_name"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/store_img"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/store_name"
                        android:layout_centerVertical="true"
                        android:text="*********"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.shinaier.laundry.snlfactory.manage.view.SwitchView
                        android:id="@+id/iv_store_switch"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        fresco:primaryColor="#ff6f43"
                        fresco:primaryColorDark="#ff6f43"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_store_switch"
                        android:layout_centerVertical="true"
                        android:textColor="@color/store_switch_off"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@id/iv_store_switch"
                        android:text="营业中"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/store_location"
                    android:singleLine="true"
                    android:text="*****************"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:drawableLeft="@drawable/manager_location_bg"
                    android:drawablePadding="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/ll_store_name"
                    android:layout_toRightOf="@id/store_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RatingBar
                    android:id="@+id/rating_bar_store"
                    android:layout_toRightOf="@id/store_img"
                    android:layout_below="@id/store_location"
                    style="@style/collect_star"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5" />
                <TextView
                    android:id="@+id/collect_star_info"
                    android:layout_toRightOf="@id/rating_bar_store"
                    android:layout_below="@id/store_location"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/today_business_volume"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black_text"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="今日营业总额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:background="#e5e5e5"
                    android:layout_width="1dp"
                    android:layout_height="35dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/today_order_num"
                        android:textColor="@color/black_text"
                        android:textSize="23sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="今日有效订单"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/base_bg"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_manage_finance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/manage_finance"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="17dp"
                        android:layout_marginTop="18dp"
                        android:text="财务对账"
                        android:textColor="@color/black_text"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_operate_analysis"
                    android:background="@color/white"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/operation_analysis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="经营分析"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_order_inquiry"
                    android:background="@color/white"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/order_inquiry_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="订单查询"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_invite_friend"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/invite_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="邀请好友"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_user_evaluate"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/consumer_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="用户评价"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_manage_employee"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_employee_manager"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/employee_manager_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="员工管理"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_make_cash_coupon"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/make_cash_coupon_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="卡券中心"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_cash_back_record"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/cashback_list_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="返现记录"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_commodity_manage"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:background="@drawable/manage_commodity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="商品管理"
                        android:textColor="@color/black_text"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>