<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="姓名："
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ed_add_employee_name"
            android:maxLength="14"
            android:lines="1"
            android:hint="请输入员工姓名"
            android:textSize="12sp"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:textCursorDrawable="@null"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="28dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="手机号："
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_input_phone_num"
            android:maxLength="14"
            android:lines="1"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:textSize="12sp"
            android:hint="请输入员工手机号"
            android:textCursorDrawable="@null"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="28dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="验证码："
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="28dp">
            <EditText
                android:id="@+id/et_input_verify_num"
                android:maxLength="14"
                android:lines="1"
                android:textSize="12sp"
                android:hint="请输入验证码"
                android:background="@drawable/check_clothes_img_lin_bg"
                android:textCursorDrawable="@null"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="28dp"/>
            <TextView
                android:background="@drawable/check_clothes_img_lin_bg"
                android:layout_marginLeft="8dp"
                android:layout_weight="2"
                android:text="获取验证码"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/base_color"
                android:layout_width="0dp"
                android:layout_height="28dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="密码："
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_input_pass"
            android:maxLength="14"
            android:lines="1"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:textSize="12sp"
            android:hint="请输入6-18位数字+字母组合的密码"
            android:textCursorDrawable="@null"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="28dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:text="权限管理："
            android:textColor="@color/black_text"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.shinaier.laundry.snlfactory.view.WrapHeightGridView
            android:id="@+id/gv_jurisdiction_list"
            android:numColumns="2"
            android:verticalSpacing="20dp"
            android:horizontalSpacing="2dp"
            android:background="@color/white"
            android:scrollbars="none"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="确认"
        android:background="@color/base_color"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</LinearLayout>