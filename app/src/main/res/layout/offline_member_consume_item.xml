<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_member_num"
            android:layout_marginTop="14dp"
            android:text="手机号：138000000"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_deal_num"
            android:layout_below="@id/tv_member_num"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="14dp"
            android:text="交易单号：SNL1234567890"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_deal_money"
            android:text="-￥123.00"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_deal_time"
            android:layout_below="@id/tv_deal_money"
            android:text="2016.07.18 08:45:23"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>