<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_drawable_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.shinaier.laundry.snlfactory.view.ClearEditText
                    android:inputType="number"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:id="@+id/edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/search_result_img"
                    android:drawablePadding="10dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:hint="请输入订单号"
                    android:imeOptions="actionSearch"
                    android:textColor="#000"
                    android:textColorHint="#c7c7cc"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_start_search"
                android:padding="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black_text"/>
        </LinearLayout>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/order_inquiry_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton

            android:id="@+id/order_inquiry_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/base_color"
            android:text="今天"/>

        <RadioButton
            android:id="@+id/order_inquiry_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="昨天"/>

        <RadioButton
            android:id="@+id/order_inquiry_about_three_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="3日内"/>
        <RadioButton
            android:id="@+id/order_inquiry_about_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="7日内"/>
        <RadioButton
            android:id="@+id/order_inquiry_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="全部"/>
    </RadioGroup>
    <View
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/order_inquiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"/>
</LinearLayout>