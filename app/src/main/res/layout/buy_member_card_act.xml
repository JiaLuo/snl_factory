<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/load_data_status_view"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:text="持卡人："
            android:textColor="@color/black_text"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/manager_name"
            android:background="@null"
            android:hint="请输入持卡人姓名"
            android:textColorHint="#cccccc"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:text="手机号："
            android:textColor="@color/black_text"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_phone_num"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:text="邀请码："
            android:textColor="@color/black_text"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_invite_code"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="选择会员卡类型"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_member_gold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/mode_of_payment_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gold_member"
            android:layout_toRightOf="@id/iv_member_gold"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:text="金牌卡"
            android:textColor="@color/black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gold_favourable_num"
            android:layout_toRightOf="@id/iv_member_gold"
            android:layout_below="@id/gold_member"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"
            android:text="享8折优惠"
            android:textColor="#b2b2b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gold_money_num"
            android:text="￥500"
            android:textColor="@color/base_color"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_member_diamond"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/mode_of_payment_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/diamond_member"
            android:layout_toRightOf="@id/iv_member_diamond"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:text="钻石卡"
            android:textColor="@color/black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/diamond_favourable_num"
            android:layout_toRightOf="@id/iv_member_diamond"
            android:layout_below="@id/diamond_member"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"
            android:text="享7折优惠"
            android:textColor="#b2b2b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/diamond_money_num"
            android:text="￥1000"
            android:textColor="@color/base_color"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="选择支付方式"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/message_pay"
            android:background="@drawable/weixin_img"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:text="微信支付"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            android:layout_toRightOf="@id/message_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_wxpay_mode"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/mode_of_payment_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/payment_treasure_pay"
            android:background="@drawable/zhifubao_img"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:text="微信支付"
            android:textSize="15sp"
            android:textColor="@color/black_text"
            android:layout_toRightOf="@id/payment_treasure_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_alipay_mode"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/mode_of_payment_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm_pay"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="44dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="确认支付"
        android:background="@drawable/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>