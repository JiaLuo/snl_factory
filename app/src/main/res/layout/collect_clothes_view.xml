<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/collect_clothes_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="285dp"
            android:layout_height="155dp">
            <TextView
                android:id="@+id/tv_input_num"
                android:layout_marginTop="36dp"
                android:layout_centerHorizontal="true"
                android:text="请输入客户手机号/订单号"
                android:textColor="@color/black_text"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@id/tv_input_num"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_phone_order_num"
                    android:background="@drawable/input_num_bg"
                    android:layout_width="225dp"
                    android:layout_height="43dp">
                    <EditText
                        android:id="@+id/ed_phone_order_num"
                        android:textSize="14sp"
                        android:hint="请输入手机号/订单号"
                        android:maxLength="18"
                        android:lines="1"
                        android:inputType="phone"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_toRightOf="@id/ll_phone_order_num"
                    android:layout_marginLeft="12dp"
                    android:layout_below="@id/tv_input_num"
                    android:background="@drawable/scan_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <TextView
                android:id="@+id/revise_phone_cancel"
                android:gravity="center"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:text="取消"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="#cccccc"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/revise_phone_confirm"
                android:textColor="#09b1b0"
                android:textSize="16sp"
                android:gravity="center"
                android:text="确定"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>