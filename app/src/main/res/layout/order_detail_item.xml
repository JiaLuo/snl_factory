<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/order_detail_img"
            android:layout_centerVertical="true"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginTop="11dp"
            fresco:failureImage="@drawable/default_bg"
            fresco:placeholderImage="@drawable/default_bg"/>
        <TextView
            android:id="@+id/tv_clothes_name"
            android:text="真丝衬衫/连衣裙"
            android:layout_toRightOf="@id/order_detail_img"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_clothes_price"
            android:text="￥100.00"
            android:layout_toRightOf="@id/order_detail_img"
            android:layout_below="@id/tv_clothes_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#f94831"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/clothes_number"
        android:textColor="#666666"
        android:text="衣物编码：*****"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_technology_price"
        android:text="特殊工艺加价：￥0.00"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <TextView
            android:id="@+id/editor_maintain_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保值金额：￥0.00"
            android:textColor="#666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/maintain_value_clean_num"
            android:layout_toRightOf="@id/editor_maintain_value"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保值清洗费：￥0.00"
            android:textColor="#666666"
            android:textSize="13sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_take_clothes_time"
        android:text="10月26日  [周二]  15:00-19:00"
        android:drawableLeft="@drawable/editor_price_time_img"
        android:drawablePadding="6dp"
        android:layout_marginTop="13dp"
        android:textColor="#666666"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_remarks"
        android:text="备注：暂无备注"
        android:textColor="#666666"
        android:textSize="13sp"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.shinaier.laundry.snlfactory.view.WrapHeightGridView
        android:id="@+id/order_detail_gv"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:columnWidth="78dp"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="颜色："
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_detail_colour_info"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="黑色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:text="问题描述："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question_detail_info"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="墨水，油渍，掉色墨水，掉色掉色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:text="洗后预估："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_cleaned_assess"
            android:layout_gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="墨水，油渍，掉色墨水，掉色掉色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layerType="software"
        android:background="@drawable/order_detail_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
