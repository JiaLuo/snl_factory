<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_cleaned_assessment_hint"
        android:text="您可输入或选择洗后预估述"
        android:textColor="#fb4d4d"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_cleaned_assessment_describe"
        android:layout_below="@id/tv_cleaned_assessment_hint"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center"
        android:background="@drawable/check_clothes_img_lin_bg"
        android:layout_width="match_parent"
        android:layout_height="96dp">
        <EditText
            android:id="@+id/et_cleaned_assessment_describe"
            android:maxLength="20"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:gravity="left"
            android:textSize="14sp"
            android:textColorHint="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/cleaned_assessment_max_num"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="0/20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.shinaier.laundry.snlfactory.view.FlowLayout
        android:id="@+id/cleaned_assessment"
        android:layout_below="@id/rl_cleaned_assessment_describe"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:focusable="false"/>

    <com.shinaier.laundry.snlfactory.view.PinnedHeaderExpandableListView
        android:id="@+id/cleaned_assessment_list"
        android:layout_marginBottom="44dp"
        android:layout_below="@id/cleaned_assessment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.0dp"
        android:cacheColorHint="@color/white"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:groupIndicator="@null"
        android:scrollbars="vertical"
        android:scrollingCache="true" />
    <TextView
        android:id="@+id/cleaned_assessment_confirm"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@color/base_color"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
</RelativeLayout>