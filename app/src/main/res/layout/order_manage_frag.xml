<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/base_color"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:text="订单处理"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/order_manage_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/order_manage_will_dispose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
           android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/base_color"
            android:text="待处理"/>

        <RadioButton
            android:id="@+id/order_manage_will_take_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="待收件"/>

        <RadioButton
            android:id="@+id/order_manage_will_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="待清洗"/>
        <RadioButton
            android:id="@+id/order_manage_will_cleaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="清洗中"/>
        <RadioButton
            android:id="@+id/order_manage_will_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:background="@drawable/my_order_list_selector"
            android:textColor="@color/black_text"
            android:text="待送达"/>
    </RadioGroup>
    <View
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/order_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"/>
</LinearLayout>