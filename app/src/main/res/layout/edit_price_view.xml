<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="312dp"
        android:layout_height="139dp">
        <LinearLayout
            android:layout_marginTop="23dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="加价："
                android:textColor="@color/black_text"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="center"
                android:background="@drawable/check_clothes_img_lin_bg"
                android:layout_width="225dp"
                android:layout_height="24dp">
                <EditText
                    android:id="@+id/ed_edit_price"
                    android:textColor="@color/black_text"
                    android:textColorHint="#cccccc"
                    android:hint="注意：整数/小数后两位"
                    android:textSize="12sp"
                    android:maxLength="11"
                    android:lines="1"
                    android:inputType="phone"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="13dp"
            android:layout_marginTop="9dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="备注："
                android:textColor="@color/black_text"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:background="@drawable/check_clothes_img_lin_bg"
                android:layout_width="225dp"
                android:layout_height="69dp">
                <EditText
                    android:maxLength="30"
                    android:textSize="12sp"
                    android:gravity="top"
                    android:textColorHint="#cccccc"
                    android:textColor="@color/black_text"
                    android:hint="请输入备注内容..."
                    android:id="@+id/ed_remarks"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/edit_price_max_num"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textColor="#cccccc"
                    android:layout_alignParentBottom="true"
                    android:text="0/50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="42dp">
        <TextView
            android:id="@+id/edit_price_cancel"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:textSize="16sp"
            android:text="取消"
            android:layout_weight="1"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/edit_price_confirm"
            android:textColor="@color/base_color"
            android:textSize="16sp"
            android:gravity="center"
            android:text="确定"
            android:layout_weight="1"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>