<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_margin="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="编号："
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_member_num"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="SNL12345"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="姓名："
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ed_input_member_name"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:layout_alignParentRight="true"
            android:gravity="right|center"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="182dp"
            android:layout_height="36dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:text="性别："
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sex_man"
            android:layout_centerVertical="true"
            android:text="男"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/discount_selector"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sex_women"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sex_man"
            android:text="女"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/discount_selector"
            android:drawablePadding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="手机号："
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_member_phone_num"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="会员生日："
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_member_birth"
            android:gravity="end|center"
            android:background="@drawable/check_clothes_img_lin_bg"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:hint="1980-01-01"
            android:textColor="@color/black_text"
            android:layout_width="182dp"
            android:layout_height="36dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/login"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="18sp"/>
</LinearLayout>