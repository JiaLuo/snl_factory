<?xml version="1.0" encoding="utf-8"?>
<com.shinaier.laundry.snlfactory.ordermanage.view.ShopCarView xmlns:android="http://schemas.android.com/apk/res/android"
                                                            android:id="@+id/car_mainfl"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="65dp"
                                                            android:layout_gravity="bottom"
                                                            android:elevation="4dp"
                                                            android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/car_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_text" />

        <TextView
            android:id="@+id/car_nonselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:text="洗衣篓"
            android:textColor="@color/base_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/amount_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预估价格："
                android:textColor="@color/black_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥173.00"
                android:textColor="@color/price_red"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/car_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/base_color"
            android:gravity="center"
            android:onClick="goAccount"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_shop_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/shop_car_empty" />

    <TextView
        android:id="@+id/car_badge"
        style="@style/badge_style"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="5dp" />
</com.shinaier.laundry.snlfactory.ordermanage.view.ShopCarView>