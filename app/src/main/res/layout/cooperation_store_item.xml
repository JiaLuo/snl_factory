<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cooperative_store_status"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/mode_of_payment_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cooperative_store_img"
        android:layout_margin="14dp"
        fresco:failureImage="@drawable/default_bg"
        fresco:placeholderImage="@drawable/default_bg"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cooperative_store_name"
            android:text="万达洗衣洗护店"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cooperative_store_num"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:text="123"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/store_num_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cooperative_store_phone"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:text="13800000000"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/store_phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cooperative_store_address"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:text="北京市朝阳区建国路万达广场3号楼"
            android:lines="2"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/store_address_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>